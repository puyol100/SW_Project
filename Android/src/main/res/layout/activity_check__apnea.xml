<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Check_Apnea">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearInput"
        android:fontFamily="@font/tcb"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:hint="Year"
        android:layout_toLeftOf="@+id/monthInput"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthInput"
        android:fontFamily="@font/tcb"
        android:hint="Month"
        android:layout_below="@+id/photo_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayInput"
        android:fontFamily="@font/tcb"
        android:layout_marginLeft="30dp"
        android:hint="Day"
        android:layout_toRightOf="@+id/monthInput"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_button"
        android:text="찾기"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/monthInput"
        android:onClick="submit_button"
        />

    <TextView
        android:layout_below="@+id/submit_button"
        android:id="@+id/show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tcb"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>