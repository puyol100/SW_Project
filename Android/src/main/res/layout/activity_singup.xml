<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Singup">
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/emailInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="151dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/passwordInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_below="@+id/emailInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/nameInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_below="@+id/passwordInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/ageInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Age"
        android:layout_below="@+id/nameInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/birthInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Birth"
        android:layout_below="@+id/ageInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/heightInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Height"
        android:layout_below="@+id/birthInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/weightInput"
        android:fontFamily="@font/tcb"
        android:layout_centerHorizontal="true"
        android:hint="Weight"
        android:layout_below="@+id/heightInput" />

    <Button
        android:background="#000"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="가입"
        android:id="@+id/registerButton"
        android:textAllCaps="false"
        android:fontFamily="@font/tcb"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/weightInput"
        android:layout_toStartOf="@+id/BackButton"
        android:onClick="button_register"/>
    <Button
        android:background="#000"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="뒤로가기"
        android:fontFamily="@font/tcb"
        android:id="@+id/BackButton"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/registerButton"
        android:layout_alignEnd="@+id/weightInput" />

</RelativeLayout>